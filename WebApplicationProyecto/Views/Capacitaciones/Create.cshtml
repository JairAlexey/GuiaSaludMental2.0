@model Capacitaciones
@{
    ViewData["Title"] = "Crear Capacitaciones";
}

<div class="text-center">
    <h1 class="display-4">CREAR CAPACITACION</h1>

    <form class="col-sm-4 mx-auto my-auto" method="POST">

        <div class="form-group mb-5">
            <label for="exampleInputEmail1">Titulo</label>
            <input asp-for="Titulo" class="form-control mt-2 placeholder-black" placeholder="Ingrese el titulo para la capacitacion">
        </div>

        <div class="form-group mb-5">
            <label for="exampleInputEmail1">Fecha</label>
            <input asp-for="Fecha" type="date" class="form-control mt-2 placeholder-black" placeholder="Ingrese la fecha de la cita">
        </div>


        <div class="form-group mb-5">
            <label for="exampleInputEmail1">Descripción</label>
            <input asp-for="Descripcion" class="form-control mt-2 placeholder-black" placeholder="Ingrese la descripción de la cita">
        </div>


        <div class="form-group mb-5">
            <label for="exampleInputEmail1">Precio</label>
            <input asp-for="Precio" class="form-control mt-2 placeholder-black" placeholder="Ingrese el precio para la capacitacion">
        </div>

        <div class="row mt-5">
            <div class="col-6 col-md-6">
                <a asp-action="Index" class="btn btn-warning">Volver</a>
            </div>
            <div class="col-6 col-md-6">
                <button type="submit" class="btn btn-success">Enviar</button>
            </div>
        </div>

    </form>

</div>
